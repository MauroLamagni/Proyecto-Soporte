#:kivy 1.11.0

<LoginUI>:
    fusuario: usuario
    fcontrasena: contrasena

    GridLayout:
        cols:2
        rows:5
        canvas.before:
            color: 
                rgb:0,1,0
            Label:
                text: 'LogIn'
            Label:
                text:'Usuario'
            TextInput:
                id: usuario
            Label:
                text:'Contraseña'
            TextInput:
                id: contrasena
                password: True
        Button:
            color:0,0,1
            text:'Ingresar'

        Button:
            color:0,0,1 
            # rgb:0,0,1
            text:'Registrarse'



<registrarse_UI>:
    flegajo: legajo
    fnombre: nombre
    fapellido: apellido
    femail: email
    fcontrasena: contrasena
    GridLayout:
        color:0,1,0 
           # rgb:0,1,0
        cols:2
        Label:
            text: 'Registro'
        Label:
            text:'Legajo'
        TextInput:
            id: legajo
        Label:
            text:'Nombre'
        TextInput:
            id: nombre
        Label:
            text:'Apellido'
        TextInput:
            id: apellido
        Label:
            text:'Email'
        TextInput:
            id: email
        Label:
            text:'Contraseña'
        TextInput:
            id: contrasena
    Button:
        color:0,0,1 
            #rgb:0,0,1
        text:'Cancelar'

    Button:
        color:0,0,1 
            #rgb:0,0,1
        text:'Aceptar'
